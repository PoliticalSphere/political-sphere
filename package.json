{
  "name": "political-sphere-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "tslib": "^2.6.0"
  },
  "workspaces": [
    "apps/dev/ai/ai-assistant"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@jest/globals": "^30.2.0",
    "@nrwl/eslint-plugin-nx": "^19.8.4",
    "@playwright/test": "^1.45.0",
    "@swc/core": "^1.14.0",
    "@swc/jest": "^0.2.39",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "concurrently": "^8.2.2",
    "cspell": "^8.8.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^30.2.0",
    "lefthook": "^1.6.10",
    "lint-staged": "^15.2.2",
    "markdownlint-cli": "^0.39.0",
    "nx": "^22.0.1",
    "prettier": "^3.2.5",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  },
  "scripts": {
    "help": "echo 'Available scripts:\\n  build: Build the project\\n  lint: Lint the code\\n  test: Run tests\\n  bootstrap: Bootstrap the project\\n  format: Format code\\n  typecheck: Type check\\n  docs:lint: Lint documentation\\n  ai:*: AI-related scripts\\n  dev:*: Development servers\\n  rollback: Rollback changes'",
    "bootstrap": "bash scripts/bootstrap.sh",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "typecheck": "tsc -p tsconfig.base.json --noEmit",
    "test": "nx test --parallel",
    "test:api": "node --test apps/api/tests/**/*.test.js",
  "test:preflight": "node scripts/build-shared.js && node scripts/ensure-shared-entry.mjs && ln -sfn \"$(pwd)/libs/shared/dist\" \"node_modules/@political-sphere/shared\" && npm run test:api",
    "test:worker": "node --test apps/worker/tests/**/*.test.js",
    "test:services": "npm run test:api && npm run test:worker",
    "build": "nx run-many --target=build --all",
    "build:shared": "node scripts/build-shared.js",
    "release": "release-please github-release --release-type node",
    "prepare": "lefthook install",
    "docs:lint": "markdownlint **/*.md && cspell '**/*' --no-progress",
    "guard:blackbox": "node scripts/automation/guard-blackbox.mjs",
    "ai:context": "node apps/dev/ai/context-indexer.mjs",
    "ai:metrics": "node apps/dev/ai/metrics-aggregator.mjs",
    "ai:accelerate": "npm run ai:context && npm run ai:metrics",
    "ai:commit": "node apps/dev/ai/commit-msg.mjs | head -n 20",
    "ai:review": "node apps/dev/ai/review-pr.mjs",
    "ai:blackbox": "node apps/dev/ai/blackbox-review.mjs",
    "ai:governance": "node apps/dev/ai/governance.js",
    "ai:performance": "node apps/dev/ai/performance-monitor.js",
    "ai:learning": "node apps/dev/ai/learning.js",
    "ai:copilot-log": "node apps/dev/ai/copilot-experiment-log.mjs",
    "ai:telemetry": "node apps/dev/ai/telemetry-dashboard.mjs",
    "heal": "node scripts/automation/self-heal.js",
    "test:healed": "npm run heal -- node --test apps/dev/tests/unit/broken-test.mjs",
    "start:api": "node apps/api/src/index.js",
    "start:frontend": "node apps/frontend/src/server.js",
    "start:worker": "node apps/worker/src/index.js",
    "dev:api": "./apps/dev/scripts/dev-service.sh api",
    "dev:frontend": "./apps/dev/scripts/dev-service.sh frontend",
    "dev:worker": "./apps/dev/scripts/dev-service.sh worker",
    "dev:all": "./apps/dev/scripts/dev-service.sh all",
    "docker:up": "./apps/dev/scripts/dev-up.sh",
    "docker:down": "./apps/dev/scripts/dev-down.sh",
    "docker:seed": "./apps/dev/scripts/seed-data.sh",
    "mf:init": "node tools/module-federation/generate.js",
    "lint:boundaries": "eslint . --ext .ts,.tsx --max-warnings=0",
    "dev:host": "webpack serve --config apps/host/webpack.config.js",
    "dev:remote": "webpack serve --config apps/remote/webpack.config.js",
    "check:remote": "bash scripts/check-remote-entry.sh",
    "e2e:prepare": "npm run docker:up && npm run docker:seed",
    "test:e2e": "npx playwright test --reporter=html",
    "test:integration": "node --test \"apps/dev/tests/integration/**/*.test.mjs\"",
    "rollback": "echo 'Rollback not implemented yet - manual intervention required'",
    "report": "./scripts/automated-reporting.sh",
    "patch": "./scripts/patch-management.sh"
  }
}
