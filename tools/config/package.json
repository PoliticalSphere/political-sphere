{
  "name": "political-sphere-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": ["apps/dev/ai/ai-assistant", "libs/*"],
  "devDependencies": {
    "ts-node": "^10.9.2",
    "yaml": "^2.6.0",
    "@axe-core/playwright": "^4.11.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@modelcontextprotocol/server-filesystem": "^2025.8.21",
    "@nrwl/eslint-plugin-nx": "^19.8.4",
    "@nx/jest": "^22.0.1",
    "@playwright/mcp": "^0.0.45",
    "@playwright/test": "^1.45.0",
    "@swc/core": "^1.14.0",
    
    "@types/better-sqlite3": "^7.6.13",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "better-sqlite3": "^12.4.1",
    "chrome-devtools-mcp": "^0.9.0",
    "concurrently": "^9.2.1",
    "cspell": "^9.2.2",
    "eslint": "^8.57.0",
    "@nx/eslint-plugin": "^22.0.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-filenames": "^1.3.2",
    "html-webpack-plugin": "^5.5.0",
    
    "lefthook": "^1.6.10",
    "lint-staged": "^16.2.6",
    "markdownlint-cli": "^0.39.0",
    "nx": "^22.0.1",
    "playwright": "^1.56.1",
    "prettier": "^3.2.5",
    "puppeteer-mcp-server": "^0.7.2",
    "simple-git": "^3.28.0",
    "time-mcp": "^1.0.5",
    "webpack": "^5.88.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "scripts": {
    "dev:clean:processes": "bash scripts/dev/kill-resource-hogs.sh",
    "dev:reset-performance": "bash scripts/dev/kill-resource-hogs.sh",
    "help": "echo 'Available scripts:\n  build: Build the project\n  lint: Lint the code\n  test: Run tests\n  bootstrap: Bootstrap the project\n  format: Format code\n  typecheck: Type check\n  docs:lint: Lint documentation\n  ai:*: AI-related scripts\n  dev:*: Development servers\n  validate:env: Validate environment\n  rollback: Rollback changes'",
    "build:shared": "nx run-many --target=build --projects=@political-sphere/shared",
    "bootstrap": "bash scripts/bootstrap.sh",
    "validate:env": "node scripts/validate-env.js",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "typecheck": "tsc -p tsconfig.base.json --noEmit",
    "test": "nx test --parallel",
    "test:api": "node --test apps/api/tests/**/*.test.js",
    "test:worker": "node --test apps/worker/tests/**/*.test.js",
    "test:services": "npm run test:api && npm run test:worker",
    "build": "nx run-many --target=build --all",
    "release": "release-please github-release --release-type node",
    "prepare": "lefthook install",
    "docs:lint": "markdownlint **/*.md && cspell '**/*' --no-progress",
    "ai:commit": "node apps/dev/ai/commit-msg.mjs | head -n 20",
    "ai:review": "node apps/dev/ai/review-pr.mjs",
    "ai:blackbox": "node apps/dev/ai/blackbox-review.mjs",
    "ai:governance": "node apps/dev/ai/governance.js",
    "ai:performance": "node apps/dev/ai/performance-monitor.js",
    "ai:learning": "node apps/dev/ai/learning.js",
    "heal": "node scripts/automation/self-heal.js",
    "test:healed": "npm run heal -- node --test apps/dev/tests/unit/broken-test.mjs",
    "start:api": "node apps/api/src/index.js",
    "start:frontend": "node apps/frontend/src/server.js",
    "start:worker": "node apps/worker/src/index.js",
    "dev:api": "./apps/dev/scripts/dev-service.sh api",
    "dev:frontend": "./apps/dev/scripts/dev-service.sh frontend",
    "dev:worker": "./apps/dev/scripts/dev-service.sh worker",
    "dev:all": "./apps/dev/scripts/dev-service.sh all",
    "docker:up": "./scripts/dev-up.sh",
    "docker:down": "./scripts/dev-down.sh",
    "docker:seed": "./scripts/seed-db.sh",
    "docker:status": "./scripts/docker-status.sh",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "docker:ps": "docker compose ps",
    "mf:init": "node tools/module-federation/generate.js",
    "lint:boundaries": "eslint . --ext .ts,.tsx --max-warnings=0",
    "lint:import-boundaries": "node scripts/ci/check-import-boundaries.js",
    "test:a11y": "playwright test --config=playwright-accessibility-config.ts",
    "hooks:review": "node scripts/ci/husky-lefthook-review.mjs",
    "hooks:security": "node scripts/ci/husky-lefthook-security.mjs",
    "hooks:bugs": "node scripts/ci/husky-lefthook-bugs.mjs",
    "hooks:improve": "node scripts/ci/husky-lefthook-improve.mjs",
    "hooks:test": "node scripts/ci/husky-lefthook-test.mjs",
    "dev:host": "webpack serve --config apps/host/webpack.config.js",
    "dev:remote": "webpack serve --config apps/remote/webpack.config.js",
    "check:remote": "bash scripts/check-remote-entry.sh",
    "e2e:prepare": "npm run docker:up && npm run docker:seed",
    "test:e2e": "npx playwright test --reporter=html",
    "test:smoke": "bash scripts/ci/test-smoke.sh",
    "test:integration": "node --test \"apps/dev/tests/integration/**/*.test.mjs\"",
    "rollback": "echo 'Rollback not implemented yet - manual intervention required'",
    "report": "./scripts/automated-reporting.sh",
    "patch": "./scripts/patch-management.sh",
    "ci:validate": "node scripts/ci/validate-pipelines.mjs",
    "ci:test": "node scripts/ci/test-pipeline.mjs",
    "ci:monitor": "bash scripts/ci/otel-monitor.sh",
    "ci:metrics:record": "node scripts/ci/ci-metrics.mjs record",
    "ci:metrics:report": "node scripts/ci/ci-metrics.mjs report",
    "mcp:filesystem": "node ../../apps/dev/mcp-servers/filesystem/index.mjs",
    "mcp:github": "node ../../apps/dev/mcp-servers/github/index.mjs",
    "mcp:sqlite": "node ../../apps/dev/mcp-servers/sqlite/index.mjs",
    "mcp:puppeteer": "node ../../apps/dev/mcp-servers/puppeteer/index.mjs",
    "mcp:git": "node ../../apps/dev/mcp-servers/git/index.mjs",
    "mcp:political-sphere": "node ../../apps/dev/mcp-servers/political-sphere/index.mjs",
    "mcp:ai-assistant": "node ../../apps/dev/ai/ai-assistant/dist/index.js",
    "mcp:microsoft-learn": "node ../../apps/dev/mcp-servers/microsoft-learn/index.mjs",
    "mcp:playwright": "npx -y @playwright/mcp",
    "mcp:chrome-devtools": "npx -y chrome-devtools-mcp",
    "mcp:filesystem-official": "npx -y @modelcontextprotocol/server-filesystem ../../",
    "mcp:time": "npx -y time-mcp",
    "mcp:duckduckgo": "node ../../apps/dev/mcp-servers/duckduckgo/server.mjs",
    "mcp:all": "concurrently -k \"npm run mcp:filesystem\" \"npm run mcp:github\" \"npm run mcp:sqlite\" \"npm run mcp:puppeteer\" \"npm run mcp:git\" \"npm run mcp:political-sphere\" \"npm run mcp:ai-assistant\" \"npm run mcp:microsoft-learn\" \"npm run mcp:duckduckgo\""
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.66.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.207.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.207.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.207.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "@political-sphere/shared": "workspace:*",
    "bcrypt": "^6.0.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "packageManager": "pnpm@9.12.0+sha512.4abf725084d7bcbafbd728bfc7bee61f2f791f977fd87542b3579dcb23504d170d46337945e4c66485cd12d588a0c0e570ed9c477e7ccdd8507cf05f3f92eaca"
}
