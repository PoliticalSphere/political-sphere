# Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=political_sphere
DB_USER=postgres
DB_PASSWORD=your_secure_password

# API Configuration
API_BASE_URL=http://localhost:3000
API_TIMEOUT=30000
API_RETRIES=3

# External Sources
EXTERNAL_SOURCE_API_KEY=your_api_key_here
EXTERNAL_SOURCE_REFRESH_INTERVAL=3600000

# Job Configuration
CLEANUP_RETENTION_DAYS=90
CLEANUP_ARCHIVE_ENABLED=true
CLEANUP_ARCHIVE_DESTINATION=s3://archives/

# Report Configuration
REPORT_EMAIL_FROM=reports@political-sphere.com
REPORT_EMAIL_SMTP_HOST=smtp.example.com
REPORT_EMAIL_SMTP_PORT=587
REPORT_EMAIL_SMTP_USER=your_smtp_user
REPORT_EMAIL_SMTP_PASSWORD=your_smtp_password

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Server Configuration
PORT=4000
NODE_ENV=development
