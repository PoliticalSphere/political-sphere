{
  "$schema": "https://biomejs.dev/schemas/2.3.1/schema.json",
  "files": {
    "includes": ["**", "!**/node_modules/**", "!**/dist/**", "!**/coverage/**", "!**/.nx/**"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } }
}
