{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tools/config/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "ignoreDeprecations": "6.0", // Silence baseUrl deprecation warning; TODO: migrate to modern path resolution in TypeScript 7.0
    "baseUrl": ".", // Required for non-relative paths in paths mapping
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "allowImportingTsExtensions": true, // Enable .ts imports to resolve TS5097 errors
    "exactOptionalPropertyTypes": false, // Temporarily disable to fix TS2379/TS2375 errors; re-enable after codebase alignment
    "paths": {
      "@/*": ["./*"],
      "@political-sphere/shared": ["libs/shared/src/index.ts"], // Ensure shared lib resolves correctly
      "@political-sphere/ui": ["libs/ui/src/index.ts"],
      "@political-sphere/platform": ["libs/platform/src/index.ts"],
      "@political-sphere/infrastructure": ["libs/infrastructure/src/index.ts"]
    }
  },
  "include": [
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "apps/**/*.cts",
    "apps/**/*.mts",
    "apps/**/*.js",
    "apps/**/*.jsx",
    "apps/**/*.mjs",
    "apps/**/*.cjs",
    "libs/**/*.ts",
    "libs/**/*.tsx",
    "libs/**/*.cts",
    "libs/**/*.mts",
    "libs/**/*.js",
    "libs/**/*.jsx",
    "libs/**/*.mjs",
    "libs/**/*.cjs",
    "tools/**/*.ts",
    "tools/**/*.tsx",
    "tools/**/*.cts",
    "tools/**/*.mts",
    "tools/**/*.js",
    "tools/**/*.jsx",
    "tools/**/*.mjs",
    "tools/**/*.cjs",
    "scripts/**/*.ts",
    "scripts/**/*.cts",
    "scripts/**/*.mts",
    "scripts/**/*.js",
    "scripts/**/*.mjs",
    "scripts/**/*.cjs",
    "./*.ts",
    "./*.js",
    "./*.cjs",
    "./*.mjs"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tmp",
    "coverage",
    ".cache",
    ".nx",
    ".git",
    ".vitest",
    ".playwright",
    ".turbo",
    ".temp",
    ".bh",
    ".biome-home",
    "ai-index",
    "ai-cache",
    "ai-metrics",
    "ai/ai-knowledge",
    "ai/ai-learning",
    "ai/history",
    "ai/cache",
    "ai/context-bundles",
    "apps/dev/testing",
    "tools/scripts/ai",
    "logs",
    "docs",
    "reports",
    "test-results",
    "app-audit",
    "github-audit",
    "openapi-audit",
    "devcontainer-audit",
    "**/*.spec.*",
    "**/*.test.*",
    "**/*.db",
    "**/*.db-shm",
    "**/*.db-wal",
    "**/*.log"
  ]
}
