{
  "name": "@political-sphere/shared",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/src",
  "projectType": "library",
  "tags": ["scope:shared", "type:util", "type:library", "shared"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/shared/dist",
        "main": "libs/shared/src/index.ts",
        "tsConfig": "libs/shared/tsconfig.lib.json",
        "assets": []
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint libs/shared --ext .ts,.tsx,.js,.jsx --fix"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/libs/shared"],
      "options": {
        "command": "vitest run --config ../../vitest.config.ts --coverage --reporter=verbose"
      },
      "configurations": {
        "watch": {
          "command": "vitest --config ../../vitest.config.ts --watch"
        },
        "coverage": {
          "command": "vitest run --config ../../vitest.config.ts --coverage"
        }
      }
    }
  }
}
