{
  "name": "dev",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/dev",
  "projectType": "application",
  "tags": ["app"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'Dev environment does not require build (Docker-based)'"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./apps/dev/scripts/dev-up.sh"
      }
    },
    "stop": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./apps/dev/scripts/dev-down.sh"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run test:e2e"
      }
    }
  }
}
