{
  "daemon": {
    "enabled": true,
    "watcherSettings": {
      "debounceDelay": 1000,
      "aggregateChangesDelay": 500,
      "ignorePatterns": [
        "**/.git/**",
        "**/node_modules/**",
        "**/dist/**",
        "**/build/**",
        "**/.nx/cache/**",
        "**/ai-cache/**",
        "**/ai-logs/**",
        "**/ai-metrics/**",
        "**/ai-learning/**",
        "**/ai-index/**",
        "**/ai-knowledge/**",
        "**/.ps/**",
        "**/tmp/**",
        "**/artifacts/**",
        "**/monitoring/data/**",
        "**/*.log",
        "**/.env.local"
      ]
    }
  }
}
