{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "tags": ["scope:api", "type:service", "app"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/api",
        "main": "apps/api/src/app.js",
        "tsConfig": "apps/api/tsconfig.app.json",
        "assets": ["apps/api/src/assets"]
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node apps/api/src/app.js"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint apps/api --ext .ts,.tsx,.js,.jsx --fix"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "command": "vitest run --config ../../vitest.config.ts --coverage --reporter=verbose",
        "dependsOn": ["@political-sphere/shared:build"]
      },
      "configurations": {
        "watch": {
          "command": "vitest --config ../../vitest.config.ts --watch"
        },
        "coverage": {
          "command": "vitest run --config ../../vitest.config.ts --coverage"
        }
      }
    }
  }
}
