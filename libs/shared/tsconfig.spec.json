{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "outDir": "../../dist/out-tsc",
    "module": "es2022",
    "types": ["vitest", "node"]
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts"
  ]
}
