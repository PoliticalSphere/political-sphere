{
  "extends": "../../tools/config/tsconfig.base.json",
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "rootDir": "../../",
    "baseUrl": "../../",
    "paths": {
      "@political-sphere/shared": ["libs/shared/src"],
      "@political-sphere/game-engine": ["libs/game-engine/src/index.ts"]
    },
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "alwaysStrict": false,
    "exactOptionalPropertyTypes": false,
    "noPropertyAccessFromIndexSignature": false,
    "noUncheckedIndexedAccess": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,
    "noImplicitOverride": false,
    "noImplicitUseStrict": false,
    "noStrictGenericChecks": false,
    "useUnknownInCatchVariables": false,
    "noUncheckedSideEffectImports": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": false,
    "noEmit": true,
    // Allow explicit .ts imports within this app until we normalize import specifiers
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tsconfig.base.json"]
}
