{
  "scripts": {
    "preflight": "npm run lint --if-present && npm run test --if-present && npm run build --if-present",
    "fast-secure": "npm run preflight && npm run security:scan --if-present",
    "audit:full": "npm run preflight && npm run audit --if-present && npm run a11y --if-present",
    "test": "vitest --run",
    "test:changed": "VITEST_CHANGED=1 vitest --run",
    "test:shared": "VITEST_SCOPE=shared VITEST_CHANGED=0 vitest --run --coverage",
    "test:watch": "vitest --watch",
    "test:ci": "VITEST_CHANGED=0 vitest --run --coverage",
    "test:coverage": "node tools/run-vitest-coverage.js",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "dev": "npm run docker:up",
    "docker:dev": "npm run docker:up -- --minimal",
    "docker:full": "npm run docker:up -- --monitoring",
    "build:frontend": "vite build --config apps/frontend/vite.config.js",
    "serve:frontend": "vite --config apps/frontend/vite.config.js --port 3001",
    "mcp:filesystem": "node apps/dev/mcp-servers/filesystem/index.mjs",
    "mcp:git": "node apps/dev/mcp-servers/git/index.mjs",
    "mcp:github": "node apps/dev/mcp-servers/github/index.mjs",
    "mcp:sqlite": "node apps/dev/mcp-servers/sqlite/index.mjs",
    "mcp:puppeteer": "node apps/dev/mcp-servers/puppeteer/index.mjs",
    "mcp:political-sphere": "node apps/dev/mcp-servers/political-sphere/index.mjs",
    "mcp:ai-assistant": "node apps/dev/ai/ai-assistant/dist/index.js",
    "mcp:microsoft-learn": "node apps/dev/mcp-servers/microsoft-learn/index.mjs",
    "mcp:duckduckgo": "node apps/dev/mcp-servers/duckduckgo/server.mjs",
    "mcp:playwright": "npx -y @playwright/mcp",
    "mcp:chrome-devtools": "npx -y chrome-devtools-mcp",
    "mcp:filesystem-official": "npx -y @modelcontextprotocol/server-filesystem .",
    "mcp:time": "npx -y time-mcp"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.66.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.207.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.207.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-metrics": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.207.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "@vitejs/plugin-react": "^5.1.0",
    "better-sqlite3": "^12.4.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@langchain/core": "^1.0.2",
    "@langchain/mcp-adapters": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.21.0",
    "@playwright/mcp": "^0.0.45",
    "@playwright/test": "^1.40.0",
    "@swc/core": "^1.3.0",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "@upstash/context7-mcp": "^1.0.26",
    "@vitest/coverage-istanbul": "^4.0.7",
    "@vitest/coverage-v8": "^4.0.7",
    "axe-core": "^4.6.3",
    "jsdom": "^23.0.0",
    "mcp-framework": "^0.2.15",
    "nx": "^22.0.2",
    "playwright": "^1.56.1",
    "puppeteer": "^24.28.0",
    "supertest": "^6.3.3",
    "typescript": "^5.3.0",
    "vite": "^5.4.21",
    "vitest": "^4.0.7"
  }
}
