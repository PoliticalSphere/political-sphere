    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "types": ["node"],
    "module": "es2022",
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["jest.config.js", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
