# ============================================================================
# Political Sphere - Environment Configuration Template
# ============================================================================
# Copy this file to `.env` and customize for your local development environment
# NEVER commit `.env` files with real credentials to version control
#
# Usage:
#   cp .env.example .env
#   # Edit .env with your values
#   docker-compose up
# ============================================================================

# ----------------------------------------------------------------------------
# PostgreSQL Database Configuration
# ----------------------------------------------------------------------------
POSTGRES_USER=political
POSTGRES_PASSWORD=changeme
POSTGRES_DB=political_dev
POSTGRES_PORT=5432

# ----------------------------------------------------------------------------
# Redis Cache Configuration
# ----------------------------------------------------------------------------
REDIS_PASSWORD=changeme
REDIS_PORT=6379

# ----------------------------------------------------------------------------
# Keycloak Authentication Configuration
# ----------------------------------------------------------------------------
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123
KEYCLOAK_PORT=8080

# ----------------------------------------------------------------------------
# API Service Configuration
# ----------------------------------------------------------------------------
API_PORT=4000
JWT_SECRET=dev-secret-change-in-production
LOG_LEVEL=debug

# ----------------------------------------------------------------------------
# Frontend Configuration
# ----------------------------------------------------------------------------
FRONTEND_PORT=3000

# ----------------------------------------------------------------------------
# Worker Service Configuration
# ----------------------------------------------------------------------------
WORKER_INTERVAL_MS=15000

# ----------------------------------------------------------------------------
# AWS / LocalStack Configuration
# ----------------------------------------------------------------------------
AWS_REGION=us-east-1
LOCALSTACK_PORT=4566

# ----------------------------------------------------------------------------
# Development Tools Configuration
# ----------------------------------------------------------------------------
MAILHOG_SMTP_PORT=1025
MAILHOG_HTTP_PORT=8025
PGADMIN_EMAIL=admin@political-sphere.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ----------------------------------------------------------------------------
# Observability Configuration
# ----------------------------------------------------------------------------
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ----------------------------------------------------------------------------
# AI/MCP Configuration
# ----------------------------------------------------------------------------
GITHUB_TOKEN=your_github_token_here
SQLITE_DB_PATH=./data/political_sphere.db
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# ----------------------------------------------------------------------------
# Docker Configuration
# ----------------------------------------------------------------------------
COMPOSE_PROJECT_NAME=political-sphere
NODE_ENV=development
