{
  "name": "platform",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/platform",
  "projectType": "library",
  "tags": ["platform"],
  "targets": {
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd libs/platform && kubectl apply -f ."
      }
    },
    "validate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd libs/platform && kubectl apply --dry-run=client -f ."
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd libs/platform && yamllint argo-apps/*.yaml charts/**/*.yaml namespaces/*.yaml policies/*.yaml || true"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/libs/platform"],
      "options": {
        "command": "vitest run --config ../../vitest.config.ts --coverage --reporter=verbose"
      },
      "configurations": {
        "watch": {
          "command": "vitest --config ../../vitest.config.ts --watch"
        },
        "coverage": {
          "command": "vitest run --config ../../vitest.config.ts --coverage"
        }
      }
    }
  }
}
