{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://political-sphere.com/schemas/vote.json",
  "title": "Vote",
  "description": "A vote cast by a user on a legislative bill",
  "type": "object",
  "required": ["id", "billId", "userId", "position", "createdAt"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the vote",
      "pattern": "^vote-[0-9]+$",
      "examples": ["vote-1", "vote-42"]
    },
    "billId": {
      "type": "string",
      "description": "Bill ID being voted on",
      "pattern": "^bill-[0-9]+$",
      "examples": ["bill-1", "bill-42"]
    },
    "userId": {
      "type": "string",
      "description": "User ID who cast the vote",
      "pattern": "^user-[0-9]+$",
      "examples": ["user-1", "user-42"]
    },
    "position": {
      "type": "string",
      "description": "Voting position",
      "enum": ["for", "against", "abstain"],
      "examples": ["for", "against", "abstain"]
    },
    "weight": {
      "type": "number",
      "description": "Weight of the vote (default 1.0 for standard votes)",
      "minimum": 0,
      "maximum": 10,
      "default": 1.0,
      "examples": [1.0, 1.5, 2.0]
    },
    "reason": {
      "type": ["string", "null"],
      "description": "Optional explanation for the vote",
      "maxLength": 5000,
      "examples": [
        "This bill aligns with my environmental values and provides a realistic transition timeline.",
        null
      ]
    },
    "isPublic": {
      "type": "boolean",
      "description": "Whether the vote is publicly visible",
      "default": true
    },
    "createdAt": {
      "type": "string",
      "description": "ISO 8601 timestamp when vote was cast",
      "format": "date-time",
      "examples": ["2025-02-05T14:30:00.000Z"]
    }
  },
  "examples": [
    {
      "id": "vote-1",
      "billId": "bill-1",
      "userId": "user-1",
      "position": "for",
      "weight": 1.0,
      "reason": "This bill aligns with my environmental values and provides a realistic transition timeline.",
      "isPublic": true,
      "createdAt": "2025-02-05T14:30:00.000Z"
    }
  ]
}
