{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://political-sphere.com/schemas/party.json",
  "title": "Party",
  "description": "A political party in the Political Sphere platform",
  "type": "object",
  "required": [
    "id",
    "name",
    "abbreviation",
    "foundedAt",
    "isActive",
    "createdAt",
    "updatedAt"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the party",
      "pattern": "^party-[0-9]+$",
      "examples": ["party-1", "party-42"]
    },
    "name": {
      "type": "string",
      "description": "Full name of the political party",
      "minLength": 1,
      "maxLength": 200,
      "examples": ["Progressive Democratic Alliance", "Conservative Coalition"]
    },
    "abbreviation": {
      "type": "string",
      "description": "Short abbreviation for the party",
      "minLength": 1,
      "maxLength": 10,
      "examples": ["PDA", "CC", "LAB", "CON"]
    },
    "description": {
      "type": ["string", "null"],
      "description": "Detailed description of the party's platform and values",
      "maxLength": 5000,
      "examples": [
        "A center-left party focused on social justice and environmental sustainability.",
        null
      ]
    },
    "foundedAt": {
      "type": "string",
      "description": "ISO 8601 date when the party was founded",
      "format": "date",
      "examples": ["1900-01-01", "2025-01-15"]
    },
    "isActive": {
      "type": "boolean",
      "description": "Whether the party is currently active",
      "default": true
    },
    "memberCount": {
      "type": "integer",
      "description": "Number of members in the party",
      "minimum": 0,
      "default": 0,
      "examples": [0, 150, 50000]
    },
    "createdAt": {
      "type": "string",
      "description": "ISO 8601 timestamp of party creation in system",
      "format": "date-time",
      "examples": ["2025-01-15T10:30:00.000Z"]
    },
    "updatedAt": {
      "type": "string",
      "description": "ISO 8601 timestamp of last update",
      "format": "date-time",
      "examples": ["2025-01-15T10:30:00.000Z"]
    }
  },
  "examples": [
    {
      "id": "party-1",
      "name": "Progressive Democratic Alliance",
      "abbreviation": "PDA",
      "description": "A center-left party focused on social justice and environmental sustainability.",
      "foundedAt": "2020-03-15",
      "isActive": true,
      "memberCount": 15000,
      "createdAt": "2025-01-15T10:30:00.000Z",
      "updatedAt": "2025-01-15T10:30:00.000Z"
    }
  ]
}
