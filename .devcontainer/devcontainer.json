{
  "name": "Political Sphere Development",
  "dockerComposeFile": ["docker-compose.yml"],
  "service": "dev",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "shutdownAction": "stopCompose",

  "forwardPorts": [3000, 4000, 5000, 5432, 6379, 8080, 9229],
  "portsAttributes": {
    "3000": {
      "label": "Web App (Frontend)",
      "onAutoForward": "notify",
      "requireLocalPort": false,
      "protocol": "https"
    },
    "4000": {
      "label": "API Server (Backend)",
      "onAutoForward": "notify",
      "requireLocalPort": false
    },
    "5000": {
      "label": "Game Server (WebSocket)",
      "onAutoForward": "notify",
      "requireLocalPort": false
    },
    "5432": {
      "label": "PostgreSQL Database",
      "onAutoForward": "silent",
      "requireLocalPort": true
    },
    "6379": {
      "label": "Redis Cache",
      "onAutoForward": "silent",
      "requireLocalPort": true
    },
    "8080": {
      "label": "Worker Service",
      "onAutoForward": "notify",
      "requireLocalPort": false
    },
    "9229": {
      "label": "Node.js Debug Port",
      "onAutoForward": "silent",
      "requireLocalPort": false
    }
  },

  "initializeCommand": "echo 'Initializing Political Sphere development environment...'",
  "onCreateCommand": {
    "setup-git": "git config --global --add safe.directory ${containerWorkspaceFolder}",
    "install-deps": "npm install --prefer-offline --no-audit"
  },
  "updateContentCommand": "npm install --prefer-offline --no-audit",
  "postCreateCommand": "bash .devcontainer/scripts/post-create.sh",
  "postStartCommand": {
    "display-info": "echo 'âœ… Political Sphere dev environment ready. Run npm run dev:api or npm run dev:web to start services.'",
    "check-deps": "npm list --depth=0 || true"
  },
  "postAttachCommand": "echo 'ðŸš€ Attached to Political Sphere development container'",

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "enableNonRootDocker": "true",
      "moby": "true",
      "dockerDashComposeVersion": "v2"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "latest",
      "helm": "latest",
      "minikube": "none"
    },
    "ghcr.io/devcontainers/features/aws-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "latest",
      "tflint": "latest",
      "terragrunt": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20",
      "nodeGypDependencies": true,
      "nvmVersion": "latest"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": true
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "configureZshAsDefaultShell": false,
      "username": "node",
      "userUid": "automatic",
      "userGid": "automatic",
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": true
    },
    "ghcr.io/devcontainers/features/sops:1": {
      "version": "latest"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "streetsidesoftware.code-spell-checker",
        "biomejs.biome",
        "ms-vscode.vscode-typescript-next",
        "yoavbls.pretty-ts-errors",
        "usernamehw.errorlens",
        "nrwl.angular-console",
        "vitest.explorer",
        "ms-playwright.playwright",
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "github.copilot",
        "github.copilot-chat",
        "bradlc.vscode-tailwindcss",
        "dsznajder.es7-react-js-snippets",
        "styled-components.vscode-styled-components",
        "redhat.vscode-yaml",
        "ms-vscode.vscode-json",
        "tamasfe.even-better-toml",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers",
        "hashicorp.terraform",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "42crunch.vscode-openapi",
        "humao.rest-client",
        "rangav.vscode-thunder-client",
        "deque-systems.vscode-axe-linter",
        "yzhang.markdown-all-in-one",
        "davidanson.vscode-markdownlint",
        "snyk-security.snyk-vulnerability-scanner",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        "christian-kohler.path-intellisense",
        "visualstudioexptteam.vscodeintellicode",
        "editorconfig.editorconfig"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit",
          "source.organizeImports": "explicit"
        },
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.rulers": [80, 100],
        "editor.bracketPairColorization.enabled": true,
        "editor.guides.bracketPairs": "active",
        "typescript.preferences.importModuleSpecifier": "relative",
        "typescript.updateImportsOnFileMove.enabled": "always",
        "typescript.suggest.autoImports": true,
        "typescript.preferences.quoteStyle": "single",
        "javascript.preferences.quoteStyle": "single",
        "javascript.updateImportsOnFileMove.enabled": "always",
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "/bin/zsh",
            "icon": "terminal-linux"
          }
        },
        "files.exclude": {
          "**/node_modules": true,
          "**/.git": true,
          "**/dist": true,
          "**/build": true,
          "**/.next": true,
          "**/coverage": true
        },
        "files.watcherExclude": {
          "**/node_modules/**": true,
          "**/dist/**": true,
          "**/build/**": true,
          "**/.next/**": true,
          "**/coverage/**": true
        },
        "files.associations": {
          "*.css": "tailwindcss"
        },
        "search.exclude": {
          "**/node_modules": true,
          "**/dist": true,
          "**/build": true,
          "**/.next": true,
          "**/coverage": true,
          "**/reports": true
        },
        "git.autofetch": true,
        "git.confirmSync": false,
        "git.enableSmartCommit": true,
        "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
        "eslint.workingDirectories": [
          {
            "mode": "auto"
          }
        ],
        "vitest.enable": true,
        "vitest.commandLine": "npx vitest",
        "security.workspace.trust.enabled": true,
        "editor.accessibilitySupport": "on",
        "extensions.experimental.affinity": {
          "vscodevim.vim": 1
        }
      }
    }
  },

  "remoteUser": "node",
  "containerUser": "node",

  "containerEnv": {
    "NODE_ENV": "development",
    "LOG_LEVEL": "debug",
    "DOCKER_HOST": "unix:///var/run/docker.sock"
  },

  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  },

  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/node/.ssh,type=bind,readonly",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig,target=/home/node/.gitconfig,type=bind,readonly",
    "source=political-sphere-npm-cache,target=/home/node/.npm,type=volume"
  ],

  "waitFor": "onCreateCommand",

  "overrideCommand": false
}
