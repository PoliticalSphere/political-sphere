# EditorConfig for Political Sphere
# See: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 120

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.sh]
indent_size = 2

[Makefile]
indent_style = tab

[*.py]
indent_size = 4

[*.{ts,tsx,js,jsx}]
indent_size = 2
max_line_length = 100

[*.go]
indent_style = tab
