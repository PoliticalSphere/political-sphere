{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://political-sphere.com/schemas/bill.json",
  "title": "Bill",
  "description": "A legislative bill proposed in the Political Sphere platform",
  "type": "object",
  "required": ["id", "title", "proposerId", "status", "createdAt", "updatedAt"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the bill",
      "pattern": "^bill-[0-9]+$",
      "examples": ["bill-1", "bill-42"]
    },
    "title": {
      "type": "string",
      "description": "Title of the legislative bill",
      "minLength": 5,
      "maxLength": 500,
      "examples": [
        "Climate Action and Renewable Energy Transition Act",
        "Universal Healthcare Access Bill"
      ]
    },
    "description": {
      "type": "string",
      "description": "Full description of the bill's purpose and provisions",
      "minLength": 10,
      "maxLength": 50000,
      "examples": [
        "This bill establishes a framework for transitioning to 100% renewable energy by 2040..."
      ]
    },
    "proposerId": {
      "type": "string",
      "description": "User ID of the bill's proposer",
      "pattern": "^user-[0-9]+$",
      "examples": ["user-1", "user-42"]
    },
    "status": {
      "type": "string",
      "description": "Current status of the bill in the legislative process",
      "enum": [
        "draft",
        "proposed",
        "active_voting",
        "passed",
        "rejected",
        "withdrawn"
      ],
      "examples": ["draft", "active_voting", "passed"]
    },
    "category": {
      "type": ["string", "null"],
      "description": "Category or policy area of the bill",
      "enum": [
        "environment",
        "healthcare",
        "education",
        "economy",
        "justice",
        "infrastructure",
        "defense",
        "foreign_policy",
        null
      ],
      "examples": ["environment", "healthcare", null]
    },
    "votingStartsAt": {
      "type": ["string", "null"],
      "description": "ISO 8601 timestamp when voting begins",
      "format": "date-time",
      "examples": ["2025-02-01T00:00:00.000Z", null]
    },
    "votingEndsAt": {
      "type": ["string", "null"],
      "description": "ISO 8601 timestamp when voting ends",
      "format": "date-time",
      "examples": ["2025-02-15T23:59:59.999Z", null]
    },
    "votesFor": {
      "type": "integer",
      "description": "Number of votes in favor",
      "minimum": 0,
      "default": 0,
      "examples": [0, 150, 5000]
    },
    "votesAgainst": {
      "type": "integer",
      "description": "Number of votes against",
      "minimum": 0,
      "default": 0,
      "examples": [0, 75, 2000]
    },
    "votesAbstain": {
      "type": "integer",
      "description": "Number of abstentions",
      "minimum": 0,
      "default": 0,
      "examples": [0, 25, 500]
    },
    "createdAt": {
      "type": "string",
      "description": "ISO 8601 timestamp of bill creation",
      "format": "date-time",
      "examples": ["2025-01-15T10:30:00.000Z"]
    },
    "updatedAt": {
      "type": "string",
      "description": "ISO 8601 timestamp of last update",
      "format": "date-time",
      "examples": ["2025-01-15T10:30:00.000Z"]
    }
  },
  "examples": [
    {
      "id": "bill-1",
      "title": "Climate Action and Renewable Energy Transition Act",
      "description": "This bill establishes a framework for transitioning to 100% renewable energy by 2040...",
      "proposerId": "user-1",
      "status": "active_voting",
      "category": "environment",
      "votingStartsAt": "2025-02-01T00:00:00.000Z",
      "votingEndsAt": "2025-02-15T23:59:59.999Z",
      "votesFor": 3500,
      "votesAgainst": 1200,
      "votesAbstain": 300,
      "createdAt": "2025-01-15T10:30:00.000Z",
      "updatedAt": "2025-02-10T14:22:00.000Z"
    }
  ]
}
