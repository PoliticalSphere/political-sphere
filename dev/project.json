{
  "name": "dev",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/dev",
  "projectType": "application",
  "tags": ["app"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'Dev environment does not require build (Docker-based)'"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./apps/dev/scripts/dev-up.sh"
      }
    },
    "stop": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./apps/dev/scripts/dev-down.sh"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "command": "vitest run --config ../../vitest.config.js --coverage --reporter=verbose"
      },
      "configurations": {
        "watch": {
          "command": "vitest --config ../../vitest.config.js --watch"
        },
        "coverage": {
          "command": "vitest run --config ../../vitest.config.js --coverage"
        },
        "e2e": {
          "command": "npm run test:e2e"
        }
      }
    }
  }
}
