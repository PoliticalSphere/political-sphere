{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Test User Fixture",
  "description": "Sample user data for testing",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^test-user-[0-9]{3}$",
      "description": "Test user identifier"
    },
    "email": {
      "type": "string",
      "format": "email",
      "pattern": "@example\\.com$",
      "description": "Test email address (must use example.com domain)"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Display name"
    },
    "role": {
      "type": "string",
      "enum": ["voter", "moderator", "admin"],
      "description": "User role"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Account creation timestamp"
    },
    "preferences": {
      "type": "object",
      "properties": {
        "notifications": {
          "type": "boolean"
        },
        "theme": {
          "type": "string",
          "enum": ["light", "dark", "system"]
        }
      }
    }
  },
  "required": ["id", "email", "name", "role", "createdAt"],
  "additionalProperties": false
}
