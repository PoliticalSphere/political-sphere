// Prisma Schema for Political Sphere API
// Database schema definition for the political simulation platform

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================================================
// User Management
// ============================================================================

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String   @unique
  password  String   // Hashed password
  role      UserRole @default(USER)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  votes     Vote[]
  party     Party?   @relation(fields: [partyId], references: [id])
  partyId   String?
  
  @@map("users")
}

enum UserRole {
  USER
  MODERATOR
  ADMIN
}

// ============================================================================
// Political Parties
// ============================================================================

model Party {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  ideology    String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  members     User[]
  
  @@map("parties")
}

// ============================================================================
// Voting & Governance
// ============================================================================

model Proposal {
  id          String         @id @default(uuid())
  title       String
  description String
  status      ProposalStatus @default(ACTIVE)
  
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  expiresAt   DateTime?
  
  // Relations
  votes       Vote[]
  
  @@map("proposals")
}

enum ProposalStatus {
  DRAFT
  ACTIVE
  PASSED
  REJECTED
  EXPIRED
}

model Vote {
  id         String   @id @default(uuid())
  choice     String   // YES, NO, ABSTAIN
  
  createdAt  DateTime @default(now())
  
  // Relations
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  
  proposal   Proposal @relation(fields: [proposalId], references: [id])
  proposalId String
  
  @@unique([userId, proposalId]) // One vote per user per proposal
  @@map("votes")
}

// ============================================================================
// News & Content
// ============================================================================

model NewsArticle {
  id        String        @id @default(uuid())
  title     String
  excerpt   String?
  content   String
  category  String?
  status    ContentStatus @default(DRAFT)
  
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  
  @@map("news_articles")
}

enum ContentStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
  FLAGGED
}

// ============================================================================
// Audit Trail
// ============================================================================

model AuditLog {
  id        String   @id @default(uuid())
  action    String   // Action performed
  entity    String   // Entity affected (User, Vote, etc.)
  entityId  String   // ID of the affected entity
  userId    String?  // User who performed the action
  metadata  String?  // JSON string with additional context
  
  createdAt DateTime @default(now())
  
  @@map("audit_logs")
}
