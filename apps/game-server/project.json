{
  "name": "game-server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/game-server/src",
  "projectType": "application",
  "tags": ["scope:game-server", "type:service", "app"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/game-server",
        "main": "apps/game-server/src/server.ts",
        "tsConfig": "apps/game-server/tsconfig.json",
        "assets": ["apps/game-server/src/assets"]
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/apps/game-server/server.js"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/game-server/jest.config.ts"
      }
    }
  }
}
